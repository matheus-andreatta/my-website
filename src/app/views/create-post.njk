{% extends "layout.njk" %}

{% block style %}
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <!-- CSS
    ================================================== -->
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/vendor.css">
    <link rel="stylesheet" href="/css/main.css">

    <style type="text/css" media="screen">
        .s-styles { 
            background: #f0f0f0;
            padding-top: 16.2rem;
            padding-bottom: 12rem;
        }

        .s-styles .section-intro h1 {
            margin-top: 0;
        }
         header{
        position: absolute;
        top: 30px;
        left: 0;
        right: 0;
        z-index: 100;
        background-color: #f2f2f2;
      }
      header .heading-wrapper {
          border-radius: 5px;
          padding: 15px 40px;
          background: #000b0d;
          color: #fff;
      }
      .heading-wrapper .row{
        align-items: center;
      }

      .heading-wrapper h4{
        margin:0;
      }

      .heading-wrapper a{
        color:#fff;
      }

      button{
        font-size: 21px;
        font-weight: 400;
        color: #fff;
        background-color: #000b0d;
        border: 0;
        line-height: 3rem;
        margin-bottom: 0;
        padding-left: 0;
      }
      .copyright {
          text-align: center;
          padding: 30px 0;
          background: #000b0d;
      }
    </style> 

    <!-- script
    ================================================== -->
    <script src="/js/modernizr.js"></script>
    <!-- <script src="js/pace.min.js"></script> -->
{% endblock %}

</head>

<body id="top">
    {% block content %}

    <!-- preloader
    ================================================== -->
    <div id="preloader">
        <div id="loader" class="dots-fade">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <!-- styles
    ================================================== -->
    <section id="styles" class="s-styles">
    
        <div class="row">

            <div class="col-12 tab-full">

                <h3 class="add-bottom">Criando Post</h3>

                <form action="/create" method="post">
                    <div>
                        <label for="sampleInput">Título</label>
                        <input class="full-width" name="title" type="text" placeholder="test@mailbox.com" id="sampleInput">
                    </div>
                    <div>
                        <label for="sampleRecipientInput">Categoria</label>
                        <div class="cl-custom-select">
                            <select name="category" class="full-width" id="sampleRecipientInput">
                                <option value="Option 1">Teste 1</option>
                                <option value="Option 2">Teste 2</option>
                                <option value="Option 3">Teste 3</option>
                            </select>
                        </div>
                    </div>
                    
                    <label for="exampleMessage">Texto</label>
                    <textarea class="full-width" name="text" placeholder="Your message" id="editor"></textarea>

                    
                    <button class="btn--primary full-width" type="submit" value="Submit"></button>

                </form>

            </div>


        </div> <!-- end row -->

    </section> <!-- end styles -->

    <footer class="pt-0 pb-0">
      <p class="copyright text-white p-4 mb-0">
        Meu site pessoal com todos os direitos não reservados.
      </p>
    </footer>

    {% endblock %}

  {% block scripts %}

    <!-- Java Script
    ================================================== -->
    <script src="/js/jquery-3.2.1.min.js"></script>
    <script src="/js/plugins.js"></script>
    <script src="/js/main.js"></script>

    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script>
        var quill = new Quill('#editor', {
            theme: 'snow'
        });
    </script>
    
  {% endblock %}

</body>

</html>