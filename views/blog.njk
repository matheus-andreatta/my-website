    <!-- script
    ================================================== -->
    <script src="js/modernizr.js"></script>

    <style>
      header{
        position: absolute;
        top: 30px;
        left: 0;
        right: 0;
        z-index: 100;
        background-color: #f2f2f2;
      }
      header .heading-wrapper {
          border-radius: 5px;
          padding: 15px 40px;
          background: #000b0d;
          color: #fff;
      }
      .heading-wrapper .row{
        align-items: center;
      }

      .heading-wrapper h4{
        margin:0;
      }

      .heading-wrapper a{
        color:#fff;
      }

      button{
        font-size: 21px;
        font-weight: 400;
        color: #fff;
        background-color: #000b0d;
        border: 0;
        line-height: 3rem;
        margin-bottom: 0;
        padding-left: 0;
      }
      .copyright {
          text-align: center;
          padding: 30px 0;
          background: #000b0d;
      }
    </style>
{% endblock %}

